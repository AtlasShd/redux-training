{
  "env": {
      "node": true,
      "es2022": true,
      "jest": true,
      "browser": true
  },
  "extends": [
      "airbnb-base",
      "plugin:react/recommended"
  ],
  "plugins": [
    "import",
    "jsx-a11y",
    "react",
    "react-hooks"
  ],
  "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "ignorePatterns": ["/dist/", "/gulp/", "/node_modules/"],
  "rules": {
    // "no-console":"warn",
    // "no-underscore-dangle":"warn",
    // "class-methods-use-this":"warn",
    // "no-param-reassign": "warn",
    // "no-continue":"warn",
    // "react/prop-types": "warn",
    // "no-restricted-globals": "warn",
    "max-len":"warn",
    "no-trailing-spaces": "warn",
    "no-tabs":"warn",
    "indent":"warn",
    "no-unused-vars":"warn",
    "import/extensions":"off",
    "default-param-last": "off",
    "linebreak-style": "off",
    "import/no-extraneous-dependencies": "warn",
    "import/prefer-default-export": "warn"
  }
}